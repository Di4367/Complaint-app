<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:fillViewport="true"
    android:background="#E6F0F0">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:padding="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:elevation="4dp">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Broken AC in Hostel Room"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/ticket_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#123456"
            android:textColor="#555555"
            android:layout_marginTop="4dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/tag_maintenance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Maintenance"
                android:background="#B4D9D2"
                android:padding="6dp"
                android:textColor="#000000"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/tag_pending"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pending"
                android:background="#EEE3CC"
                android:padding="6dp"
                android:textColor="#654321" />
        </LinearLayout>

        <TextView
            android:id="@+id/submitted_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submitted on 7 Apr 2024 at 10:00 AM"
            android:textColor="#333333"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/user_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Disha, disha.sharma01.edu\nInformation Technology"
            android:textColor="#333333"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/location_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Location"
            android:textStyle="bold"
            android:layout_marginTop="12dp" />

        <TextView
            android:id="@+id/location_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hostel Room 302"
            android:layout_marginTop="2dp" />

        <TextView
            android:id="@+id/desc_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textStyle="bold"
            android:layout_marginTop="12dp" />

        <TextView
            android:id="@+id/desc_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="The air conditioner in room 302 has stopped working for the past three days. It’s making loud noises and not cooling at all."
            android:layout_marginTop="2dp" />

        <TextView
            android:id="@+id/attachment_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Attachments"
            android:textStyle="bold"
            android:layout_marginTop="12dp" />

        <ImageView
            android:id="@+id/attachment_image"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:src="@drawable/ac_image"
            android:layout_marginTop="4dp"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/timeline_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Timeline"
            android:textStyle="bold"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/timeline1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• 7 Apr 2024 at 1:00 AM – Complaint submitted"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/timeline2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• 9 Apr 2024 at 03:00 PM – Status changed to Pending"
            android:layout_marginTop="2dp" />

    </LinearLayout>
</ScrollView>
