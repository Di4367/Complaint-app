<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F6F6">

    <ImageView
        android:id="@+id/unmuteIcon"
        android:layout_width="227dp"
        android:layout_height="263dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="84dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="467dp"
        android:contentDescription="Unmute Icon"
        android:scaleType="fitCenter"
        android:src="@drawable/unmuute" />

    <!-- Password Field -->

    <EditText
        android:id="@+id/collegeId"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="82dp"
        android:layout_marginTop="324dp"
        android:layout_marginEnd="79dp"
        android:background="@drawable/rounded_white"
        android:hint="College ID"
        android:inputType="text"
        android:padding="10dp"
        android:textColor="#000000"
        android:textColorHint="#888888" />

    <EditText
        android:id="@+id/password"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/collegeId"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_white"
        android:hint="Password"
        android:inputType="textPassword"
        android:padding="10dp"
        android:textColor="#000000"
        android:textColorHint="#888888" />

    <!-- Log In Button -->

    <Button
        android:id="@+id/loginBtn"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="82dp"
        android:layout_marginTop="476dp"
        android:layout_marginEnd="78dp"
        android:backgroundTint="#7F9EA1"
        android:text="Sign Up"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/signUpText"
        android:layout_width="291dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="59dp"
        android:layout_marginTop="635dp"
        android:layout_marginEnd="61dp"
        android:layout_marginBottom="75dp"
        android:autoLink="none"
        android:textAlignment="center"
        android:text="If account already exist? Login"
        android:textColor="#0C0C0C"
        android:textSize="16sp"
        android:textStyle="italic" />
</RelativeLayout>
